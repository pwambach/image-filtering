:root
  background: #f5f5f5

body
  display: grid
  grid-template-rows: 10em 1fr
  margin: 0
  place-items: center
  min-height: 100vh
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  padding-bottom: 4em
  box-sizing: border-box

.selection
  padding: 0 1em
  color: #444

.list
  display: inline
  padding: 0

  li
    display: inline
    list-style: none
    padding: 0.1em

    a
      color: salmon
      text-decoration: none

      &:hover
        color: darken(salmon, 10%)
        text-decoration: underline

.canvasContainer
  align-self: start
  display: grid
  box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.25)
  max-width: 100%

  .info, canvas
    width: 100%
    grid-area: 1 / 1

  .info
    display: grid
    grid-template: 1fr 1fr / 1fr 1fr

    & > div
      padding: 0.5em
      color: white
      text-shadow: 0 0 4px black
      opacity: 0

      &:hover
        opacity: 1

@media (prefers-color-scheme: dark)
  :root
    background: #333

  .selection
    color: #aaa